<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuranAppClone" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="Theme.QuranAppClone" parent="Base.Theme.QuranAppClone" >
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeekBar" parent="Theme.QuranAppClone">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">#4dffffff</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/BaseBottomSheetDialog">
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="full_screen_dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

</resources>